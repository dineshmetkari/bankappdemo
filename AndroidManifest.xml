<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="a.matt.lcl"    
	android:versionCode="6"
    android:versionName="1.2">
	<application android:icon="@drawable/lion" android:label="@string/app_name" android:debuggable="false">
		<activity 
		android:name=".MainApp" 
		android:label="Lyonnais"
		android:theme="@style/Notitle" 
		android:configChanges="orientation|keyboardHidden" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity 
			android:name=".ConfigureAll" 
			android:theme="@style/CupcakeDialog" 
			android:label="Lyonnais configuration"
			android:configChanges="orientation|keyboardHidden" >
		</activity>
		<activity 
			android:name=".ConfigurePass" 
			android:theme="@style/CupcakeDialog" 
			android:label="Lyonnais mot de passe"
			android:configChanges="orientation|keyboardHidden" >
		</activity>	
		<activity 
			android:name=".detail.DetailActivity" 
			android:theme="@style/CupcakeDialog" 
			android:label="Détail des opérations"
			android:configChanges="orientation|keyboardHidden" >
		</activity>	
	</application> 
    <uses-permission android:name="android.permission.INTERNET" />
    
    <uses-sdk android:minSdkVersion="3" android:targetSdkVersion="4"/>
    
    <supports-screens android:smallScreens="true"
                  android:normalScreens="true" 
                  android:largeScreens="true"
                  android:anyDensity="true"/>	
</manifest>